<section class="base-modal user-modal">
  <header>
    <h1>Welcome to Journaly</h1>
    <p><span class="btn"><%= @user.name %> </span> you are going to love this app</p>
  </header>
  <section class="clear-fix trip-bar">
      <header>
        <h2>Create a Trip</h2>
      </header>
        <%= form_for @trip do |form| %>
        <%= form.text_field :name, :placeholder => 'now...create a trip' %>
        <h3>Choose a start date</h3 >
        <%= form.date_select :start_date %>
        <br class="clear-fix"><br>
        <h3>Choose an end date</h3>
        <%= form.date_select :end_date %>
        <br class="clear-fix"><br>
        <%= form.submit "create", :class => 'btn btn-large btn-block btn-info' %>
      <% end %>
    </section>
</section>